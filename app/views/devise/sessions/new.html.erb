<script>
  var firebase_signDB = firebase.database().ref('user/');
</script>

<script>

  function signUp(){
    var userName = $('#userName').val();
    var userEmail = $('#userEmail').val();
    var userPassword = $('#userPassword').val();

    var userData = {name: userName, email: userEmail, password: userPassword};
    firebase_signDB.push(userData);
  }

</script>
<div class="upper-class">
  <div class="row">
    <div class="login-wrap">
      <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">로그인</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">회원가입</label>
        
        <div class="login-form">
        
          <div class="sign-in-htm">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="group">
                <div class="field">
                  <%= f.label :이메일 , class: "label"%><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", required: true %>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="group">
                <div class="field">
                  <%= f.label :비밀번호, class: "label"  %><br />
                  <%= f.password_field :password, autocomplete: "off", class: "input", required: true %>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="field">
                <% if devise_mapping.rememberable? -%>
                  <div class="group">
                    <input id="check" type="checkbox" class="check" checked>
                    <label for="check"><span class="icon"></span> Keep me Signed in</label>
                  </div>
                <% end %>
              </div>

              <div class="field">
                <div class="actions">
                  <div class="group">
                      <%= f.submit "로그인", class: "button" %>
                  </div>
                </div>
              </div>
            <% end  %>
              <div class="hr"></div>
              <div class="foot-lnk">
                <a href="#forgot">Forgot Password?</a>
              </div>
            
          </div>


          <div class="sign-up-htm">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <div class="field">
                <div class="group" id = "user_name">
                  <%= f.label :"이름", class: "label"  %><br />
                  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input", :id => 'userName', required: true %>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="field">
                <div class="group" id = "user_email">
                  <%= f.label :"이메일", class: "label"  %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input", :id => 'userEmail', required: true %>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="field">
                <div class="group">
                  <%= f.label :"비밀번호 (6자리 이상)", class: "label"  %>
                    <br />
                  <%= f.password_field :password, autocomplete: "off", class: "input", :id => 'userPassword', required: true %>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="field">
                <div class="group">
                  <%= f.label :"비밀번호 확인", class: "label"  %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off" , class: "input", required: true%>
                  <span class="bar"></span>
                </div>
              </div>

              <div class="actions">
                <div class="group">
                  <%= f.submit "회원가입", class: "button", :onclick => "signUp();"%>
                </div>
              </div>
            <% end %>

              <div class="hr"></div>
              <div class="foot-lnk">
                <label for="tab-1">Already Member?</a>
              </div>
          </div>

        </div> 
      </div>
    </div> 
  </div>
<%= render "devise/shared/links" %>
</div>